# ============================================
# SafeHorizon Backend Configuration
# ============================================

# Application
APP_NAME=SafeHorizon API
APP_ENV=development
APP_DEBUG=true
API_PREFIX=/api
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/safehorizon
SYNC_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/safehorizon

# Redis Cache
REDIS_URL=redis://localhost:6379/0

# Firebase Cloud Messaging (Push Notifications)
FIREBASE_CREDENTIALS_JSON_PATH=./firebase-service-account.json

# Twilio SMS (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# AI Models
MODELS_DIR=./models_store

# CORS Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:19006

# Blockchain (Hyperledger Fabric)
BLOCKCHAIN_ENABLED=false
BLOCKCHAIN_NETWORK_URL=http://localhost:7051

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/safehorizon.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
