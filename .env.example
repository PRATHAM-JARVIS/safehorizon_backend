# FastAPI
APP_NAME=SafeHorizon API
APP_ENV=development
APP_DEBUG=true
API_PREFIX=/api

# Database (PostgreSQL + PostGIS)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/safehorizon
SYNC_DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/safehorizon

# Redis
REDIS_URL=redis://redis:6379/0

# Firebase
FIREBASE_CREDENTIALS_JSON_PATH=./firebase-service-account.json

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# AI Models
MODELS_DIR=./models_store

# Security
ALLOWED_ORIGINS=*
