# Production Environment Variables
# Copy this to .env and fill in your actual values

# Database
DATABASE_URL=postgresql+asyncpg://safehorizon:your_password@localhost:5432/safehorizon_prod
DB_PASSWORD=your_secure_database_password

# Redis
REDIS_URL=redis://localhost:6379/0

# Firebase Push Notifications
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# Twilio SMS
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Application Settings
ENVIRONMENT=production
DEBUG=false
SECRET_KEY=your_secret_key_for_app_security

# CORS Settings (adjust for your frontend domains)
ALLOWED_ORIGINS=https://safehorizon-app.com,https://safehorizon-dashboard.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Model Storage
MODEL_STORAGE_PATH=./models

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json